{
    "name": "segment/analytics-wordpress",
    "description": "The hassle-free way to integrate analytics into any WordPress site.",
    "type": "wordpress-plugin",
    "require-dev": {
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "^2.3",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "yoast/phpunit-polyfills": "^1.0",
        "sirbrillig/phpcs-changed": "^2.10"
    },
    "license": "GPLv2",
    "authors": [
        {
            "name": "Mindgrub",
            "email": "wordpress@mindgrub.com"
        }
    ],
    "require": {
        "segmentio/analytics-php": "^3.5"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "check": "phpcs",
        "check:changed": "phpcs-changed",
        "cf": "phpcbf",
        "test": "phpunit",
        "lint": "parallel-lint --exclude .git --exclude vendor ."
    }
}
